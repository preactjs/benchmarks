{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // Prevent this jsconfig.json to be used to type-check files. Subfolders
    // need to specify their own jsconfig.json and include which libs (e.g. DOM
    // or Node) they should be compiled against.
    "noLib": true,
  },
}
